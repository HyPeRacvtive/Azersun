
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="language" content="az">
    <meta name="robots" content="index, follow">
    <meta name="title" content="">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta property="og:title" content="" />
    <meta property="og:description" content="" />
    <meta property="og:site_name" content="" />
    <meta property="og:locale" content="_lang" />
    <meta property="og:type" content="media" />
    <meta property="og:image" content="~/favicon.ico" />
    <meta property="og:url" content="" />
    <meta name="twitter:title" content="" />
    <meta name="twitter:description" content="" />
    <meta name="twitter:site" content="" />
    <meta name="twitter:image" content="~/favicon.ico" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <title>Sun Paper</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
    <link rel="preload" as="font" type="font/woff" crossorigin="anonymous" href="~/fonts/Averta-Bold.woff">
    <link rel="preload" as="font" type="font/woff2" crossorigin="anonymous" href="~/fonts/Averta-Bold.woff2">
    <link rel="preload" as="font" type="font/woff" crossorigin="anonymous" href="~/fonts/Averta-Regular.woff">
    <link rel="preload" as="font" type="font/woff2" crossorigin="anonymous" href="~/fonts/Averta-Regular.woff2">
    <link rel="preload" as="font" type="font/woff" crossorigin="anonymous" href="~/fonts/Averta-Semibold.woff">
    <link rel="preload" as="font" type="font/woff2" crossorigin="anonymous" href="~/fonts/Averta-Semibold.woff2">
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css">
    <link rel="stylesheet" href="~/css/style.min.css">
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg flex-column navbar-absolute">
            <div class="container">
                <div class="navbar-main w-100 d-flex align-items-center justify-content-between position-relative">
                    <a class="navbar-brand d-block p-0 m-0" href="/">
                        <img src="~/img/Logo/logo.svg" alt="navbarlogo">
                    </a>
                    <div class="navbar-collapse flex-grow-0">
                        <ul class="navbar-nav w-100 h-100  align-items-center justify-content-center">
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center active" href="/">
                                    Ana Səhifə
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" href="/Home/Lahiyeler">
                                    Layihələr
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" href="/Home/Alaqa">
                                    Əlaqə
                                </a>
                            </li>
                            <li class="nav-item dropdown lang-downs">
                                <span class="nav-link d-flex align-items-center">
                                    <i class="bi bi-globe2 me-2"></i>
                                    <span class="position-relative">AZ</span>
                                </span>
                                <ul class="dropdown-menu js-down w-100">
                                    <li><a class="dropdown-item" href="#">EN </a></li>
                                    <li><a class="dropdown-item" href="#">RU</a></li>
                                </ul>
                            </li>

                        </ul>
                    </div>
                    <button type="button" class="btn navicon d-none"></button>
                </div>
            </div>
        </nav>
    </header>

 


    @RenderBody()




    <footer>
        <div class="container">
            <div class="row mx-auto footer-top g-0">
                <div class="col-12 mx-auto  mx-lg-0 col-lg-2">
                    <div class="footer-logo d-block text-center text-lg-start">
                        <img class="svg" src="~/img/Logo/logo.svg" alt="">
                    </div>
                </div>
                <div class="row col-12 offset-lg-2 offset-xl-3  col-lg-8 col-xl-7 g-0">
                    <div class="col-12 col-lg-7 col-xl-6 ms-auto">
                        <p class="heading">Menu</p>
                        <ul class="footer-menu-list">
                            <li class="footer-menu-item">
                                <a href="/" class="footer-menu-links">
                                    Ana Səhifə
                                </a>
                            </li>
                            <li class="footer-menu-item">
                                <a href="/Home/Lahiyeler" class="footer-menu-links">
                                    Layihələr
                                </a>
                            </li>
                            <li class="footer-menu-item">
                                <a href="/Home/Alaqa" class="footer-menu-links">
                                    Əlaqə
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-12 col-lg-3 mb-3 mb-lg-0">
                        <p class="heading">Əlaqə</p>
                        <div class="footer-alaqa">
                            <a href="tel:0800" class="footer-alaqa-items d-flex align-items-center mb-4">
                                <i class="bi bi-telephone-fill"></i>
                                <span class="d-block ms-2">Əlaqə</span>
                            </a>
                            <a href="mailto:mail@mail.com" class="footer-alaqa-items d-flex align-items-center">
                                <i class="bi bi-envelope-fill"></i>
                                <span class="d-block ms-2">info@azersun.com</span>
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-lg-2 col-xl-1 mb-4 mb-lg-0">
                        <div class="dropdown footer-down">
                            <span class="btn btn-footer-lang" type="button" id="footerlang" data-bs-toggle="dropdown"
                                  aria-expanded="false">
                                <i class="bi bi-globe2"></i>
                                <span class="position-relative">AZ</span>
                            </span>
                            <ul class="dropdown-menu js-down" aria-labelledby="footerlang">
                                <li><a class="dropdown-item" href="#">EN</a></li>
                                <li><a class="dropdown-item" href="#">RU</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>

            <div class="footer-alt-main d-flex flex-column flex-md-row justify-content-center align-items-center align-items-lg-end
            justify-content-between">
                <ul class="d-flex mb-3 mb-md-0">
                    <li class="me-3">
                        <a href="#" class="footer-lang d-flex align-items-center justify-content-center">
                            <i class="bi bi-facebook"></i>
                        </a>
                    </li>
                    <li class="me-3">
                        <a href="#" class="footer-lang d-flex align-items-center justify-content-center">
                            <i class="bi bi-instagram"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="footer-lang d-flex align-items-center justify-content-center">
                            <i class="bi bi-youtube"></i>
                        </a>
                    </li>
                </ul>
                <p>© Copyright @DateTime.Now.Year Azersun. All right reserved </p>
            </div>
        </div>
        <div class="svg-afters">
            <svg viewBox="0 0 500 150" preserveAspectRatio="none" style="height: 100%; width: 100%;">
                <path d="M0.00,49.98 C170.71,2.48 437.63,104.13 503.67,52.80 L500.00,150.00 L0.00,150.00 Z"
                      style="stroke: none; fill: #1c129d;"></path>
            </svg>
        </div>
    </footer>

    <div class="overlay-body w-100 position-fixed top-0"></div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="~/js/style.js"></script>
    <script>
        AOS.init({
            once: 'true'
        });
    </script>
</body>
</html>
