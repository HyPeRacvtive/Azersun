@model IEnumerable<Settings>


<div class="col-12 col-lg-6 col-xl-5">
    @foreach (var item in Model)
    {
    <div class="right">
        <p>Bizə yaza bilərsiniz</p>
        <ul class="info-list">
            <li>
                <a href="#" class="info-item d-flex align-items-center">
                    <i class="bi bi-telephone-fill"></i>
                    <span>@item.Phone</span>
                </a>
            </li>
            <li>
                <a href="#" class="info-item d-flex align-items-center">
                    <i class="bi bi-envelope-fill"></i>
                    <span>@item.Mail</span>
                </a>
            </li>
            <li>
                <a href="#" class="info-item d-flex align-items-center">
                    <i class="bi bi-geo-alt-fill"></i>
                    <span>@item.Adress</span>
                </a>
            </li>
        </ul>

        @await Component.InvokeAsync("SocialMediaList")

        <div class="alaqa-map">
            <iframe src="@item.Map"
                    width="100%" height="100%" style="border:0;" loading="lazy"></iframe>
        </div>
    </div>
    }
</div>