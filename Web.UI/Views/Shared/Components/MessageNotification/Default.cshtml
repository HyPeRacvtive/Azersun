@model IEnumerable<Messages>

<ul class="navbar-nav my-lg-0">
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle waves-effect waves-dark" href="" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="ti-email"></i>
            @if (Model.Any(x => x.IsRead != true))
            {
                <div class="notify"> <span class="heartbit"></span> <span class="point"></span> </div>
            }
        </a>
        <div class="dropdown-menu dropdown-menu-end mailbox animated bounceInDown">
            <ul>
                <li>
                    @if (Model.Any(x => x.IsRead != true))
                    {
                        <div class="drop-title"> @Model.Count(x => x.IsRead == false) Yeni Mesajınız Var</div>
                    }
                    else
                    {
                        <div class="drop-title"> Hiç Yeni Mesajınız Yok</div>
                    }
                </li>
                <li>
                    <div class="message-center">
                        @foreach (var Mes in Model)
                        {
                            if (Mes.IsRead == true)
                            {
                                <a href="/Message/Detail/@Mes.Id">
                                    <div class="btn btn-success btn-circle text-white"><i class="far fa-envelope-open"></i></div>
                                    <div class="mail-contnet">
                                        <h5>@Mes.FirstName @Mes.LastName</h5> <span class="mail-desc"> @Mes.Subject</span> <span class="time">@Mes.CreateDate</span>
                                    </div>
                                </a>
                            }
                            else
                            {
                                <a href="/Message/Detail/@Mes.Id">
                                    <div class="btn btn-danger btn-circle text-white"><i class="far fa-envelope"></i></div>
                                    <div class="mail-contnet">
                                        <h5>@Mes.FirstName @Mes.LastName</h5> <span class="mail-desc"> @Mes.Subject</span> <span class="time">@Mes.CreateDate</span>
                                    </div>
                                </a>
                            }
                        }
                    </div>
                </li>
                <li>
                    <a class="nav-link text-center link" href="/Message/Index"> <strong>Türm Mesajları Gör</strong> <i class="fa fa-angle-right"></i> </a>
                </li>
            </ul>
        </div>
    </li>
    <li class="nav-item right-side-toggle"> <a class="nav-link  waves-effect waves-light" href="javascript:void(0)"><i class="ti-settings"></i></a></li>
</ul>