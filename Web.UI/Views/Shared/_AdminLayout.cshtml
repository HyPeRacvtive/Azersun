@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Azersun Admin</title>
    <link rel="icon" type="image/png" sizes="16x16" href="~/img/Logo/logo.svg">
    <link href="~/AdminStyle/css/morris.css">
    <link href="~/AdminStyle/css/style.min.css" rel="stylesheet">
    <link href="~/AdminStyle/css/dashboard1.css" rel="stylesheet">
    <link href="~/AdminStyle/css/font-awesome/css/all.css" rel="stylesheet" />
</head>

<body class="skin-default-dark fixed-layout">
@*    <div class="preloader">
        <div class="loader">
            <div class="loader__figure"></div>
            <p class="loader__label">Azersun</p>
        </div>
    </div>*@
    <div id="main-wrapper">
        <header class="topbar">
            <nav class="navbar top-navbar navbar-expand-md navbar-dark">
                <div class="navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"> <a class="nav-link nav-toggler d-block d-md-none waves-effect waves-dark" href="javascript:void(0)"><i class="ti-menu"></i></a> </li>
                        <li class="nav-item"> <a class="nav-link sidebartoggler d-none d-lg-block d-md-block waves-effect waves-dark" href="javascript:void(0)"><i class="icon-menu"></i></a> </li>

                        <li class="nav-item">
                            <form class="app-search d-none d-md-block d-lg-block">
                                <input type="text" class="form-control" placeholder="Ara...">
                            </form>
                        </li>
                    </ul>
                    @await Component.InvokeAsync("MessageNotification")
                </div>
            </nav>
        </header>
        @await Component.InvokeAsync("LeftSideBar")     
        <div class="page-wrapper">

            <div class="container-fluid">
                @RenderBody()
                <div class="right-sidebar">
                    <div class="slimscrollright">
                        <div class="rpanel-title"> RENK AYARLARI <span><i class="ti-close right-side-toggle"></i></span> </div>
                        <div class="r-panel-body">
                            <ul id="themecolors" class="m-t-20">
                                <li><b>Açık Renkli Temalar</b></li>
                                <li><a href="javascript:void(0)" data-skin="skin-default" class="default-theme">1</a></li>
                                <li><a href="javascript:void(0)" data-skin="skin-green" class="green-theme">2</a></li>
                                <li><a href="javascript:void(0)" data-skin="skin-red" class="red-theme">3</a></li>
                                <li><a href="javascript:void(0)" data-skin="skin-blue" class="blue-theme">4</a></li>
                                <li><a href="javascript:void(0)" data-skin="skin-purple" class="purple-theme">5</a></li>
                                <li><a href="javascript:void(0)" data-skin="skin-megna" class="megna-theme">6</a></li>
                                <li class="d-block m-t-30"><b>Koyu Renkli Temalar</b></li>
                                <li><a href="javascript:void(0)" data-skin="skin-default-dark" class="default-dark-theme working">7</a></li>
                                <li><a href="javascript:void(0)" data-skin="skin-green-dark" class="green-dark-theme">8</a></li>
                                <li><a href="javascript:void(0)" data-skin="skin-red-dark" class="red-dark-theme">9</a></li>
                                <li><a href="javascript:void(0)" data-skin="skin-blue-dark" class="blue-dark-theme">10</a></li>
                                <li><a href="javascript:void(0)" data-skin="skin-purple-dark" class="purple-dark-theme">11</a></li>
                                <li><a href="javascript:void(0)" data-skin="skin-megna-dark" class="megna-dark-theme ">12</a></li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer">
            © Copyright @DateTime.Now.Year Azersun. All right reserved
        </footer>
    </div>
    <script src="~/AdminStyle/js/jquery.min.js"></script>
    <script src="~/AdminStyle/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminStyle/js/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/AdminStyle/js/waves.js"></script>
    <script src="~/AdminStyle/js/sidebarmenu.js"></script>
    <script src="~/AdminStyle/js/custom.min.js"></script>
    <script src="~/AdminStyle/js/raphael-min.js"></script>
    <script src="~/AdminStyle/js/morris.min.js"></script>
    <script src="~/AdminStyle/js/jquery.sparkline.min.js"></script>
    <script src="~/AdminStyle/js/jquery.toast.js"></script>
    <script src="~/AdminStyle/js/dashboard1.js"></script>
</body>
</html>
