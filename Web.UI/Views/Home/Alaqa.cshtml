@model Messages

@{
    ViewData["Title"] = "Alaqa";
}
<div class="box"></div>

<section>
    <div class="container">
        <div class="alaqa-general-main" data-aos="fade-up" data-aos-duration="1000">
            <p class="alaqa-heading text-center">Əlaqə</p>
            <div class="row alaqa-main g-0">
                <div class="col-12 col-lg-6 col-xl-7 ">

                    <div class="left">
                        <p>Bizə yaza bilərsiniz</p>
                        @using (Html.BeginForm("Alaqa", "Home", FormMethod.Post, new { @class = "row form-partner g-1 gx-5" }))
                        {
                            <div class="col-12 col-lg-6">
                                <div class="form-floating mb-3">
                                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "Ad" })
                                    @Html.ValidationMessageFor(x => x.FirstName,"", new { @class = "text-danger" })
                                    <label for="floatingInput" class="labels">Ad</label>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6">
                                <div class="form-floating mb-3">
                                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "Soyad" })
                                    @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-danger" })    
                                    <label for="floatingInput" class="labels">Soyad</label>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6">
                                <div class="form-floating mb-3">
                                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Telefon nömrəsi", type = "number" })
                                    @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })                                  
                                    <label for="floatingInput" class="labels">Telefon nömrəsi</label>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6">
                                <div class="form-floating mb-3">
                                    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", placeholder = "E-mail", type = "email" })
                                    @Html.ValidationMessageFor(x => x.Mail, "", new { @class = "text-danger" })
                                    <label for="floatingInput" class="labels">E-mail</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", placeholder = "Mövzu" })
                                    @Html.ValidationMessageFor(x => x.Subject, "", new { @class = "text-danger" })
                                    <label for="floatingInput" class="labels">Mövzu</label>
                                  
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    @Html.TextAreaFor(x => x.Message, new { @class = "form-control", placeholder = "Mesajınız" })
                                    @Html.ValidationMessageFor(x => x.Message, "", new { @class = "text-danger" })
                             
                                    <label for="floatingInput" class="labels">Mesajınız</label>
                                </div>
                            </div>
                            <div class="col-12 mt-3">
                                <button type="submit"
                                        class="btn btn-send d-flex align-items-center justify-content-center">
                                    Göndər
                                </button>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-12 col-lg-6 col-xl-5">
                    <div class="right">
                        <p>Bizə yaza bilərsiniz</p>
                        <ul class="info-list">
                            <li>
                                <a href="#" class="info-item d-flex align-items-center">
                                    <i class="bi bi-telephone-fill"></i>
                                    <span>(+99412) 404 19 19</span>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="info-item d-flex align-items-center">
                                    <i class="bi bi-envelope-fill"></i>
                                    <span>info@azersun.com</span>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="info-item d-flex align-items-center">
                                    <i class="bi bi-geo-alt-fill"></i>
                                    <span>Heydər Əliyev pr., 92a Bakı, Azərbaycan, AZ1029</span>
                                </a>
                            </li>
                        </ul>
                        <ul class="social-list d-flex align-items-center">
                            <li>
                                <a href="#" class="social-item d-flex align-items-center justify-content-center">
                                    <i class="bi bi-facebook"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="social-item d-flex align-items-center justify-content-center">
                                    <i class="bi bi-instagram"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="social-item d-flex align-items-center justify-content-center">
                                    <i class="bi bi-youtube"></i>
                                </a>
                            </li>
                        </ul>
                        <div class="alaqa-map">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3037.95612412804!2d49.89241271563385!3d40.40982276398306!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x403062b9b75d7abf%3A0x1196186aad77cb20!2sAzersun%20Holding!5e0!3m2!1sen!2str!4v1637259086159!5m2!1sen!2str"
                                    width="100%" height="100%" style="border:0;" loading="lazy"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
